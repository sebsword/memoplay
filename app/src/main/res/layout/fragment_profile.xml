        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"/>
        -->

    <TextView
        android:text="Your Word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/wordLabel"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Return Home"
        android:layout_width="0dp"
        android:id="@+id/returnBtn"
        android:layout_height="69dp"
        android:background="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="XP: 364"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experienceLabel"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/circularProgressBar"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        android:layout_marginBottom="43dp" />

    <ProgressBar
        android:layout_width="350dp"
        android:id="@+id/circularProgressBar"
        android:progressDrawable="@drawable/circular_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="116"
        android:progress="100"
        android:layout_height="351dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/returnBtn"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wordLabel" />

    <TextView
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelLabel"
        android:textSize="160sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="@+id/circularProgressBar"
        app:layout_constraintLeft_toLeftOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar" />

</android.support.constraint.ConstraintLayout>
