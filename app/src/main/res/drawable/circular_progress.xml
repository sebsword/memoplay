    <item>
        <shape
            android:shape="oval"
            android:innerRadius="140dp">
            <solid
                android:color="#32ffffff">

            </solid>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="170"
            android:toDegrees="150"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:useLevel="true"
                android:innerRadius="140dp"
                android:thicknessRatio="16">
                <gradient
                    android:startColor="#f7ff00"
                    android:centerColor="#aeff00"
                    android:endColor="#08ff00"
                    android:type="sweep">
                </gradient>
            </shape>
        </rotate>
    </item>


</layer-list>